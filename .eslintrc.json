{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended" // Add this if using TypeScript
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // Next.js handles React in scope automatically
